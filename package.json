{
  "name": "cbt-promotion-training-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . MyDesktopApp --platform=win32 --arch=x64 --out=dist --overwrite",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.cbt-promotion-training-app",
    "productName": "FCT-CBT"
  },
  "win": {
    "target": "nsis",
    "icon": "images/cbt.ico",
    "publish": [
      "github"
    ]
  },
  "mac": {
    "target": "dmg",
    "icon": "images/cbt.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "images/cbt.png"
  },
  "keywords": [],
  "author": "HM Solutions LTD",
  "license": "MIT",
  "description": "This is a desktop application for FCT staff CBT Promotion Training",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "sqlite3": "^5.1.7"
  }
}
